# Database Configuration (Supabase)
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_KEY="your-supabase-service-key"

# Email Configuration (Resend)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxx

# Contact form recipient email
CONTACT_EMAIL=info@tonalfocus.com

# Contact Information (Public)
NEXT_PUBLIC_CONTACT_EMAIL="info@tonalfocus.com"
NEXT_PUBLIC_CONTACT_PHONE="+1 (555) 123-4567"

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your_bcrypt_hash_here
# To generate hash: node -e "console.log(require('bcryptjs').hashSync('your-password', 10))"
# In development, leave ADMIN_PASSWORD_HASH empty to use default password: admin123

# Direct Database Connection (for migrations)
DATABASE_URL=your_database_connection_string

# Authentication (if using NextAuth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
