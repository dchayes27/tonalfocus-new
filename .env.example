# ========================================
# REQUIRED: Supabase Configuration
# ========================================
# Get these from your Supabase project settings (https://supabase.com/dashboard)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# ========================================
# REQUIRED: Admin Authentication
# ========================================
# Generate hash: node scripts/generate-admin-hash.js
# Or: node -e "console.log(require('bcryptjs').hashSync('your-password', 10))"
ADMIN_USERNAME="admin"
ADMIN_PASSWORD_HASH="your_bcrypt_hash_here"

# ========================================
# REQUIRED: Revalidation Secret
# ========================================
# Used to secure the /api/revalidate endpoint
# Generate: openssl rand -base64 32
REVALIDATE_SECRET="your-random-secret-here"

# ========================================
# OPTIONAL: Site Configuration
# ========================================
# Base URL for your site (used in scripts and metadata)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Custom revalidation endpoint (defaults to /api/revalidate)
# REVALIDATE_ENDPOINT="https://yourdomain.com/api/revalidate"

# ========================================
# OPTIONAL: Contact Information
# ========================================
# Public contact details displayed on site
NEXT_PUBLIC_CONTACT_EMAIL="info@tonalfocus.com"
NEXT_PUBLIC_CONTACT_PHONE="+1 (555) 123-4567"

# Backend recipient for contact form
CONTACT_EMAIL="info@tonalfocus.com"

# ========================================
# OPTIONAL: Email Service (Resend)
# ========================================
# Get your API key from https://resend.com/api-keys
# Required only if using the contact form
# RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxx"

# ========================================
# OPTIONAL: Database (for migrations)
# ========================================
# Direct PostgreSQL connection string
# Only needed if running migrations outside Supabase dashboard
# DATABASE_URL="postgresql://user:password@host:5432/database"

# ========================================
# OPTIONAL: NextAuth (if using)
# ========================================
# NEXTAUTH_URL="http://localhost:3000"
# NEXTAUTH_SECRET="your_nextauth_secret_here"

# ========================================
# OPTIONAL: Analytics
# ========================================
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
